$(document).ready(function() {

  var newOption = '<option value="<%= @adversary.id %>"><%= @adversary.name %></option>';
  $('#project_adversary_id').append(newOption);
  var selectOptions = $("#project_adversary_id option");
  selectOptions.sort(function(a, b) { if (a.text > b.text) { return 1; } else if (a.text < b.text) { return -1; } else { return 0 } });
  $("#project_adversary_id").empty().append(selectOptions).trigger("liszt:updated");
  setTimeout(function(){
    $('#project_adversary_id').val("<%= @adversary.id %>").trigger("liszt:updated");
  }, 200);


});